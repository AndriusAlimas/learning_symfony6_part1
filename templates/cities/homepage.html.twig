{% extends 'base.html.twig' %}

{% block title %}Cities in {{ country }}|{{ parent() }}{% endblock %}

{% block body %}
<div class="container fade-in">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8">
      <div class="text-center mb-4">
        <h1 class="display-6 text-primary mb-2">{{ title }}</h1>
        <p class="text-muted mb-0">Cities of country <span class="fw-semibold">{{ country|upper }}</span></p>
      </div>

      <div class="card shadow-sm">
        <div class="card-body">
          <ul class="list-group list-group-flush">
            {% for city in cities %}
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <span class="badge rounded-pill city-name">{{ city.name }}</span>
                <span class="badge bg-secondary">Population: {{ city.population|number_format(0, '.', ',') }}</span>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
        <div class="d-flex justify-content-end mb-3">
          <a href="#" class="btn btn-success">
            <i class="fas fa-plus me-2"></i>
            Add City
          </a>
        </div>
    </div>
  </div>
</div>
{% endblock %}