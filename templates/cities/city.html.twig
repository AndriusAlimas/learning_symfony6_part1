{% extends 'base.html.twig' %}

{% block title %}Explore {{ title }} | {{ parent() }}{% endblock %}

{% block body %}
<div class="container mt-4 fade-in">
	<div class="row justify-content-center">
		<div class="col-12 col-md-10 col-lg-8">
			<div class="text-center mb-3">
				<h1 class="display-6 text-primary mb-1">Explore {{ title }}</h1>
				<p class="text-muted">Personalize what to see in this city</p>
			</div>

			<div class="card shadow-sm mb-4">
				<div class="card-body">
					<h2 class="h5 text-primary mb-3">Filters</h2>
					<div class="row g-3 align-items-end">
						<div class="col-md-4">
							<label class="form-label">Neighborhood</label>
							<select class="form-select">
								<option selected>Any</option>
								<option>City Center</option>
								<option>University Area</option>
								<option>Riverside</option>
								<option>Historic Quarter</option>
							</select>
						</div>
						<div class="col-md-4">
							<label class="form-label">Category</label>
							<select class="form-select">
								<option selected>Attractions</option>
								<option>Food & Drink</option>
								<option>Events</option>
								<option>Parks</option>
								<option>Museums</option>
							</select>
						</div>
						<div class="col-md-4">
							<label class="form-label">Open Now</label>
							<div class="form-check">
								<input class="form-check-input" type="checkbox" id="openNow">
								<label class="form-check-label" for="openNow">Only show places currently open</label>
							</div>
						</div>

						<div class="col-md-4">
							<label class="form-label">Price Range (Â£)</label>
							<div class="input-group">
								<input class="form-control" type="number" placeholder="Min">
								<input class="form-control" type="number" placeholder="Max">
							</div>
						</div>
						<div class="col-md-4">
							<label class="form-label">Rating</label>
							<select class="form-select">
								<option selected>4+ stars</option>
								<option>3+ stars</option>
								<option>2+ stars</option>
							</select>
						</div>
						<div class="col-md-4">
							<label class="form-label">Distance</label>
							<select class="form-select">
								<option selected>Within 5 km</option>
								<option>Within 10 km</option>
								<option>Within 25 km</option>
							</select>
						</div>

						<div class="col-md-6">
							<label class="form-label">Date</label>
							<input class="form-control" type="date">
						</div>

						<div class="col-12 d-flex gap-2 mt-2">
							<button class="btn btn-primary" type="button">Apply Filters</button>
							<button class="btn btn-outline-secondary" type="button">Reset</button>
						</div>
					</div>
				</div>
			</div>

			<div class="card shadow-sm">
				<div class="card-body">
					<p class="text-muted mb-0">Results for {{ title }} will appear here once filters are wired.</p>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}
